<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.iOSGalleryAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/ios_light_gray</item>
        <item name="colorOnPrimaryContainer">@color/ios_text_primary</item>
        <item name="colorSecondary">@color/ios_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/ios_blue</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:colorBackground">@color/ios_background</item>
        <item name="colorOnBackground">@color/ios_text_primary</item>
        <item name="colorSurface">@color/ios_card_background</item>
        <item name="colorOnSurface">@color/ios_text_primary</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.iOSGalleryAndroid" parent="Base.Theme.iOSGalleryAndroid" />

    <style name="Theme.ImageViewer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="iOSTitle">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/ios_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iOSSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ios_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="iOSBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ios_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="iOSButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ios_blue</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>